{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2020"],
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    // "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", ".vscode"]
}
